<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.l000phone.mygifttalk">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.l000phone.mygifttalk.activities.MainActivity"
            android:label="@string/app_name">

        </activity>
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.GuideActivity" />
        <activity android:name=".activities.CrowdActivity" />
        <activity android:name=".activities.ItemDetailActivity" />
        <activity android:name=".activities.StrategyDetail" />
        <activity android:name=".activities.ChooseGiftToolAct" />
        <activity android:name=".activities.SingleCategoryActivity" />


    </application>

</manifest>